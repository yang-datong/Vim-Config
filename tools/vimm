#!/bin/bash

unset option

file=$1
if [ ! $file ];then
	if [ -f Session.vim ];then
		option="-S Session.vim"
	else
		option=""
	fi
fi
sed 's/let g:is_vim_studio=0/let g:is_vim_studio=1/' $HOME/.config/nvim/init.vim > /tmp/init_studio.vim

nvim -u /tmp/init_studio.vim ${option} -c "execute 'lua require(\"notify\")(\"Welcome to VIM-Studio\")'" $file
